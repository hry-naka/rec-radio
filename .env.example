# NHK API Configuration
# Get your API key from https://api.nhk.or.jp/
NHK_API_KEY=your_api_key_here

# Location and Area Configuration
# Location: Where you are listening (e.g., tokyo, osaka, hokkaido)
# Area Code: Region code for API (e.g., 130 for Tokyo)
LOCATION=tokyo
AREA_CODE=130

# API Version
# Options: "v2" or "v3"
API_VERSION=v2

# FFmpeg Recording Parameters
# Log level: quiet, fatal, error, warning, info, verbose, debug
FFMPEG_LOGLEVEL=warning

# Reconnection settings (in seconds)
FFMPEG_RECONNECT_DELAY_MAX=600

# Timeout for HTTP connections (in seconds)
FFMPEG_RW_TIMEOUT=900000000

# Audio codec settings
FFMPEG_AUDIO_CODEC=aac
FFMPEG_AUDIO_BITRATE=96k
FFMPEG_AUDIO_SAMPLE_RATE=22050

# Additional ffmpeg options (optional)
# Format: space-separated options (e.g., "-reconnect 1 -reconnect_at_eof 0")
FFMPEG_EXTRA_OPTIONS=-reconnect 1 -reconnect_at_eof 0 -reconnect_streamed 1 -live_start_index -2 -http_persistent 0
